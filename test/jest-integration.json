{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./integration/",
  "testEnvironment": "node",
  "testRegex": ".integration.spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@error/(.*)": "<rootDir>/../../src/error/$1",
    "@movie/(.*)": "<rootDir>/../../src/movie/$1",
    "@root/(.*)": "<rootDir>/../../src/$1"
  }
}
