{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@error/*": ["src/error/*"],
      "@movie/*": ["src/movie/*"],
      "@root/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"]
}
